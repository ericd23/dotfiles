#!/bin/bash

DOTS=/home/$USER/tilde

ask() {
  while true; do

    if [ "${2:-}" = "Y" ]; then
      prompt="Y/n"
      default=Y
    elif [ "${2:-}" = "N" ]; then
      prompt="y/N"
      default=N
    else
      prompt="y/n"
      default=
    fi

    # Ask the question
    read -p "$1 [$prompt] " REPLY

    # Default?
    if [ -z "$REPLY" ]; then
       REPLY=$default
    fi

    # Check if the reply is valid
    case "$REPLY" in
      Y*|y*) return 0 ;;
      N*|n*) return 1 ;;
    esac

  done
}

ask "Delete dead dotfiles?" Y && find ~ -xtype l -delete
ask "Install symlink for all profile?" Y && ln -sfn ${DOTS}/.config/* ~/.config/; ln -sfn ${DOTS}/{.profile,.xinitrc,.xprofile,.mbsyncrc} ~/
ask "Install symlink for all scripts?" Y && ln -sfn ${DOTS}/.local/bin/* ~/.local/bin/
ask "Install symlink for all application entries?" Y && ln -sfn ${DOTS}/.local/share/applications/* ~/.local/share/applications/
